@import './vars.styl';

nav
  align-items: center
  display: flex
  flex-flow: row nowrap
  justify-content: space-between
  margin: 2*scale 0

  h1
    margin: 0
    opacity: 0.3

  ol
    align-items: center
    display: flex
    flex-flow: row nowrap
    justify-content: flex-start
    list-style: none
    margin: 0
    padding: 0

    li
      shadow()
      align-items: center
      background: blue
      display: flex
      flex-flow: row nowrap
      height: 40px
      margin: 0 10px
      padding: 0 scale
      position: relative

      &::before
        border-color: blue transparent blue transparent
        border-style: solid
        border-width: 20px 0 20px 10px
        content: ''
        position: absolute
        right: 100%
        top: 0

      &::after
        border-color: transparent transparent transparent blue
        border-style: solid
        border-width: 20px 0 20px 10px
        content: ''
        left: 100%
        position: absolute
        top: 0
