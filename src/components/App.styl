@import url('https://fonts.googleapis.com/css?family=Karla');

scale = 10px

blue = #3498db

body
  background: #ecf0f1
  font-family: 'Karla', sans-serif
  margin: 0
  padding: 0

a
  color: blue
  text-decoration: none

  &:hover
    text-decoration: underline

main
  margin: auto
  width: 80%

nav
  align-items: center
  display: flex
  flex-flow: row nowrap
  justify-content: space-between
  margin: scale 0

  h1
    opacity: 0.3

  ol
    align-items: center
    display: flex
    flex-flow: row nowrap
    justify-content: flex-start
    list-style: none
    margin: 0
    padding: 0

    li
      align-items: center
      background: blue
      display: flex
      flex-flow: row nowrap
      height: 40px
      margin: 0 10px
      padding: 0 scale
      position: relative

      &::before
        border-color: blue transparent blue transparent
        border-style: solid
        border-width: 20px 0 20px 10px
        content: ''
        position: absolute
        right: 100%
        top: 0

      &::after
        border-color: transparent transparent transparent blue
        border-style: solid
        border-width: 20px 0 20px 10px
        content: ''
        left: 100%
        position: absolute
        top: 0

article
  background: white
  box-shadow: 0 0 scale alpha(black, 0.2)
  padding: scale

footer
  color: #95a5a6
  margin: scale 0
  text-align: center

  a
    color: inherit
